global:
  scrape_interval:     30s
  evaluation_interval: 1m

scrape_configs:

  - job_name: 'prometheus'
    static_configs:
      - targets: [
          '{{ groups['master'][0] }}:9090'
      ]

  - job_name: 'node_exporter'
    static_configs:
      - targets: [
{% for host in groups['nodes'] %}
          '{{ host }}:9100'{% if not loop.last %},{% endif %}
{% endfor %}
      ]
